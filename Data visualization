                             database=,
                             charset=,
                             cursorclass=)
    with connection.cursor() as cursor:
        sql = f"select * from {table}"
        cursor.execute(sql)


        # 獲取多筆資料
    result_list = cursor.fetchall()  # 得到list
    for row in result_list:
        row = dict(row)
        # print(row)
        with open('table.csv', 'a', newline='') as f_object:
